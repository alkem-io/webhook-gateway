# Server Configuration
PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json

# Redis Configuration (REDIS_URL takes precedence; otherwise built from REDIS_HOST + REDIS_PORT)
REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Platform Configuration
PLATFORM_URL=https://alkem.io

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Service under maintenance"

# Correlation ID Header
CORRELATION_ID_HEADER=X-Request-ID

# Login Backoff Configuration
LOGIN_BACKOFF_IDENTIFIER_LOCKOUT_SECONDS=120
LOGIN_BACKOFF_IP_LOCKOUT_SECONDS=120
LOGIN_BACKOFF_MAX_IDENTIFIER_ATTEMPTS=10
LOGIN_BACKOFF_MAX_IP_ATTEMPTS=20
